<Window x:Class="HAMS.Student.StudentView.StuHomeworkRank"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HAMS.Student.StudentView"
        xmlns:vc="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
        mc:Ignorable="d"
        Title="StuHomeworkRank" Height="654" Width="800" ResizeMode="CanMinimize">
    <Grid Margin="0,0,-0.333,-1">
        <Grid.RowDefinitions>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="451*"/>
        </Grid.RowDefinitions>
        <Canvas Background="LightBlue" Margin="0" Grid.Row="0" HorizontalAlignment="Left" Height="71" VerticalAlignment="Top" Width="793">
            <Border x:Name="imgHead" BorderBrush="Black" BorderThickness="0" Grid.Column="1" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="41" CornerRadius="35" Canvas.Left="23" RenderTransformOrigin="1.894,0.568" Canvas.Top="18">
                <Border.Background>
                    <ImageBrush>
                        <ImageBrush.ImageSource>
                            <DrawingImage>
                                <DrawingImage.Drawing>
                                    <ImageDrawing ImageSource="/Resources/bk_create.jpg" Rect="100,200,110,100"></ImageDrawing>
                                </DrawingImage.Drawing>
                            </DrawingImage>
                        </ImageBrush.ImageSource>
                    </ImageBrush>
                </Border.Background>
            </Border>
            <Label x:Name="tbUserNameAc" Content="201821060569刘小蕊" Canvas.Left="91" Canvas.Top="29" RenderTransformOrigin="1.087,0.535" FontWeight="Bold"/>
            <Image x:Name="imgSystemLogo" Height="59" Width="191" Source="pack://siteoforigin:,,,/Resources/management.jpg" Stretch="UniformToFill" Canvas.Left="519" Canvas.Top="10"/>
            <Button x:Name="btnExit" Background="LightBlue"  Canvas.Left="714.999" Canvas.Top="10" Width="68.334" RenderTransformOrigin="0.622,0.945" Height="43.907" Foreground="#FF151111" BorderBrush="LightBlue">
                <StackPanel>
                    <Image x:Name="exit1" Width="28" Height="23.907" Source="pack://siteoforigin:,,,/Resources/resizeApi.png"/>
                    <TextBlock x:Name="exit2" VerticalAlignment="Center" RenderTransformOrigin="0.47,1.481" FontWeight="SemiBold"><Run Text="注销"/></TextBlock>
                </StackPanel>
            </Button>

        </Canvas>
        <DockPanel  HorizontalAlignment="Left" Height="54" LastChildFill="False" Background="LightPink" Grid.Row="1" VerticalAlignment="Top" Width="793" Margin="0,3,0,0">

            <Menu x:Name="menu" Background="LightPink" HorizontalAlignment="Left" Height="55" VerticalAlignment="Center" Width="682" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="0,0,0,-0.333">
                <Button x:Name="btnReturn" Background="LightPink"  Height="45" Canvas.Left="10" Canvas.Top="27.189" Width="94" Click="btnReturn_Click" >
                    <Image x:Name="imgReturn" Height="32" Canvas.Left="10" Canvas.Top="27.189" Width="64" Source="/Resources/返回.png" RenderTransformOrigin="0.651,0.5"/>
                </Button>
                <Button x:Name="homeworkManagement" Height="45.463" Width="188" Content="作业管理" FontSize="14" FontWeight="Bold" Click="HomeworkManagement_Click"/>
                <Button x:Name="homeworkAlert" Height="45.463" Width="200" Content="作业预警" FontSize="14" FontWeight="Bold" Click="HomeworkAlert_Click"/>

            </Menu>

        </DockPanel>

        <Canvas Grid.Row="2" Margin="0,8,1,8.667" Grid.RowSpan="2">

            <Button Content="查看提交排行榜" Height="23" HorizontalAlignment="Left" x:Name="btnShowChartData" VerticalAlignment="Top" Width="120.333"  Canvas.Left="24" Canvas.Top="8" Click="BtnShowChartData_Click" />
            <Button Content="查看提交人数" Height="23" HorizontalAlignment="Left" x:Name="btnShowNumber" VerticalAlignment="Top" Width="120.333"  Canvas.Left="172.667" Canvas.Top="8" Click="BtnShowNumber_Click" ></Button>
        </Canvas>
        <Canvas Grid.Row="3" Name ="ca" Margin="0,10,0.933,131.6" ToolTip="点击上方按钮绘制统计图">
            <vc:Chart Name="chart" DockPanel.Dock="Left" Height="308" Width="793" />
        </Canvas>



    </Grid>
</Window>
