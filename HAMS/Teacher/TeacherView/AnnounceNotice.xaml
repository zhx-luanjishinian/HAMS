<Window x:Class="HAMS.Teacher.TeacherView.AnnounceNotice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HAMS.Teacher.TeacherView"
        mc:Ignorable="d"
        Title="AnnounceNotice" Height="617.6" Width="523.2">
    <Grid Margin="0,10,0,-1.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="286*"/>
            <ColumnDefinition Width="211*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="538*"/>
        </Grid.RowDefinitions>
        <Canvas Margin="-10,0,3.6,-12.521" d:LayoutOverrides="LeftMargin, RightMargin" Grid.ColumnSpan="3" Height="68.961" VerticalAlignment="Bottom">
            <Border BorderBrush="Black" BorderThickness="0,0,0,1" Height="70.012" Canvas.Left="10" Width="515" Background="LightBlue" Canvas.Top="-10.667">
                <Border x:Name="headImage" BorderBrush="Black" BorderThickness="0" HorizontalAlignment="Left" Height="36.996" VerticalAlignment="Top" Width="40.666" CornerRadius="35" RenderTransformOrigin="1.894,0.568" Margin="25.734,10,0,0" d:LayoutOverrides="HorizontalAlignment">
                    <Border.Background>
                        <ImageBrush>
                            <ImageBrush.ImageSource>
                                <ImageSource>/Resources/teacher.png</ImageSource>
                            </ImageBrush.ImageSource>
                        </ImageBrush>
                    </Border.Background>
                </Border>
            </Border>
            <TextBlock x:Name="tbTeacherSpecId" TextWrapping="Wrap" Text="Z001" Canvas.Left="87" Canvas.Top="10" Width="36" Height="19" FontSize="14"/>
            <Image x:Name="image3" Height="40.145" Canvas.Left="294.2" Canvas.Top="9.2" Width="104.8" Source="/HAMS;component/Resources/management.jpg" Stretch="Fill"/>
            <Button x:Name="btnExit" Background="LightBlue" Width="81.667" RenderTransformOrigin="0.622,0.945" Foreground="#FF151111" BorderBrush="LightBlue" Height="43.907" Canvas.Left="418.874" Canvas.Top="5.526" Click="btnExit_Click">
                <StackPanel>
                    <Image x:Name="exit1" Width="28" Height="23.907" Source="/HAMS;component/Resources/resizeApi.png"/>
                    <TextBlock x:Name="exit2" VerticalAlignment="Center" RenderTransformOrigin="0.47,1.481" FontWeight="SemiBold"><Run Text="注销"/></TextBlock>
                </StackPanel>
            </Button>
            <TextBlock x:Name="tbName" TextWrapping="Wrap" Text="刘树栋" Canvas.Left="128" Canvas.Top="10" Width="47" Height="20" FontSize="14"/>
        </Canvas>
        <Canvas Grid.Row="1" Margin="-10,3.066,-6.4,0" d:LayoutOverrides="LeftMargin, RightMargin" Height="37.952" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <Border BorderBrush="Black" BorderThickness="0,0,0,1" Height="37.552" Canvas.Top="0.4" Width="513.2" Background="LightPink" Canvas.Left="10"/>
            <Border BorderBrush="Black" BorderThickness="1" Width="0" Height="53.762" Canvas.Left="80.667" Canvas.Top="10"/>
            <Border BorderBrush="Black" BorderThickness="1" Width="0" Height="49.003" Canvas.Left="67.999" Canvas.Top="14.759"/>
            <TextBlock x:Name="lbClassSpecId"  Width="136" Height="20" Canvas.Left="107" Canvas.Top="10" FontSize="14" FontWeight="Bold" Text="Z004530B1300720"/>
            <Label x:Name="labelcClassName" Content="R语言" Width="52" Height="30" Canvas.Left="259" Canvas.Top="5" FontSize="14" FontWeight="Bold"/>
            <Button x:Name="btnReturn" Width="72.533" Background="LightPink" BorderThickness="0" Height="20" Canvas.Left="20.401" Canvas.Top="7.952" Click="btnReturn_Click">
                <Image x:Name="image2" Width="73" Source="/HAMS;component/Resources/返回.png" OpacityMask="LightPink" Height="17"/>
            </Button>
        </Canvas>
        <Canvas Margin="0,2.603,3.6,0" Grid.Row="2" Grid.ColumnSpan="3">
            <Canvas Height="35.455" Canvas.Left="10" Canvas.Top="10" Width="458.4">
                <Label x:Name="homeworkTitle" Height="28" Canvas.Left="20" Canvas.Top="7" Width="113" Content="作业标题"/>
                <TextBox x:Name="textBoxHomeworkTitle" Height="28.055" Canvas.Left="163.2" TextWrapping="Wrap" Canvas.Top="7.4" Width="220" Background="White" Text="请输入作业标题"  GotFocus="textBoxHomeworkTitle_GotFocus"  />
                <Button x:Name="btnAnnounce" Content="发布" Height="29.334" Canvas.Left="211.466" Canvas.Top="388.224" Width="92.734" Click="btnAnnounce_Click"/>
            </Canvas>
            <Canvas Height="135.467" Canvas.Left="10" Canvas.Top="45.455" Width="458.4">
                <Label x:Name="description" Content="作业描述" Height="28.055" Canvas.Left="21.867" Canvas.Top="20.145" Width="112.8"/>
                <TextBox x:Name="textBoxContent" Text="请输入具体作业要求" Height="100.379" Canvas.Left="165.6" TextWrapping="Wrap"  Canvas.Top="25.088" Width="218.4" GotFocus="textBoxContent_GotFocus" />
            </Canvas>
            <Canvas Height="152" Canvas.Left="10" Canvas.Top="186" Width="448">
                <Label x:Name="deadLine" Content="截止时间" Height="28.055" Canvas.Left="22.8" Canvas.Top="10" Width="112.8"/>
                <Calendar x:Name="calTruDeadline" Height="140" Canvas.Left="167.6" Canvas.Top="10" Width="172.8" BorderThickness="1,1,1,2"/>
            </Canvas>
            <Canvas Height="53.332" Canvas.Top="342.654" Width="448.067">
                <Label x:Name="attachment" Content="上传附件（可选）" Height="28.055" Canvas.Left="32.4" Canvas.Top="12.047" Width="112.8"/>
                <Button x:Name="btnUpload" Height="31.285" Canvas.Left="176.267" Canvas.Top="12.047" Width="200.534" Background="White" BorderThickness="0" Click="btnUpload_Click">
                    <Grid Height="28.055" Width="200.534">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="34*"/>
                            <ColumnDefinition Width="167*"/>
                        </Grid.ColumnDefinitions>
                        <Image x:Name="image" Source="/HAMS;component/Resources/链接.png" d:LayoutOverrides="TopMargin, BottomMargin"/>
                        <TextBlock x:Name="upload" Margin="0,0,9.999,0" TextWrapping="Wrap" FontSize="11" FontFamily="Microsoft YaHei" FontWeight="Medium" FontStretch="SemiCondensed" RenderTransformOrigin="0.504,-0.272" d:LayoutOverrides="TopMargin, BottomMargin" Grid.Column="1"><Run Text="   "/><Run Text="                 "/><Run Text="点击"/><LineBreak/><Run Text="                    "/><Run Text="上传"/></TextBlock>
                    </Grid>
                </Button>
            </Canvas>
        </Canvas>

    </Grid>
</Window>
