<Window x:Class="HAMS.Teacher.TeacherView.AnnounceNotice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HAMS.Teacher.TeacherView"
        mc:Ignorable="d"
        Title="AnnounceNotice" Height="617.6" Width="523.2">
    <Grid Height="567">
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="538*"/>
        </Grid.RowDefinitions>
        <Canvas Margin="-10,0,3.6,-12.521">
            <Border BorderBrush="Black" BorderThickness="0,0,0,1" Height="59.345" Canvas.Left="10" Width="515" Background="LightBlue">
                <Border x:Name="headImage" BorderBrush="Black" BorderThickness="0" HorizontalAlignment="Left" Height="36.996" VerticalAlignment="Top" Width="40.666" CornerRadius="35" RenderTransformOrigin="1.894,0.568" Margin="25.734,10,0,0" d:LayoutOverrides="HorizontalAlignment">
                    <Border.Background>
                        <ImageBrush>
                            <ImageBrush.ImageSource>
                                <ImageSource>/Resources/teacher.png</ImageSource>
                            </ImageBrush.ImageSource>
                        </ImageBrush>
                    </Border.Background>
                </Border>
            </Border>
            <Label x:Name="teacherInformation" Content="Z0004520  刘树栋" Width="119.001" Height="25.81" Canvas.Left="72.466" Canvas.Top="23.535"/>
            <Canvas Width="230.4" Height="78.981" Canvas.Left="20.4" Canvas.Top="9.2"/>
            <Image x:Name="image3" Height="40.145" Canvas.Left="294.2" Canvas.Top="9.2" Width="104.8" Source="/Resources/logo.jpg" Stretch="Fill"/>
            <Button x:Name="btnExit" Background="LightBlue" Width="81.667" RenderTransformOrigin="0.622,0.945" Foreground="#FF151111" BorderBrush="LightBlue" Height="43.907" Canvas.Left="418.874" Canvas.Top="5.526">
                <StackPanel>
                    <Image x:Name="exit1" Width="28" Height="23.907" Source="/Resources/注销1.png"/>
                    <TextBlock x:Name="exit2" VerticalAlignment="Center" RenderTransformOrigin="0.47,1.481" FontWeight="SemiBold"><Run Text="注销"/></TextBlock>
                </StackPanel>
            </Button>
        </Canvas>
        <Canvas Grid.Row="1" Margin="-10,3.066,-6.4,-5" Height="37.952" VerticalAlignment="Top">
            <Border BorderBrush="Black" BorderThickness="0,0,0,1" Height="37.552" Canvas.Top="0.4" Width="525" Background="LightPink" Canvas.Left="10"/>
            <Border BorderBrush="Black" BorderThickness="1" Width="0" Height="53.762" Canvas.Left="80.667" Canvas.Top="10"/>
            <Border BorderBrush="Black" BorderThickness="1" Width="0" Height="49.003" Canvas.Left="67.999" Canvas.Top="14.759"/>
            <Label x:Name="labelClassNumber" Content="Z004530B1300720 " Width="148.533" Height="50.111" Canvas.Left="97.934" Canvas.Top="7.952" FontSize="14" FontWeight="Bold"/>
            <Label x:Name="labelcClassName" Content="R语言" Width="75.2" Height="49.003" Canvas.Left="261.133" Canvas.Top="7.952" FontSize="14" FontWeight="Bold"/>
            <Button x:Name="btnReturn" Width="72.533" Background="LightPink" BorderThickness="0" Height="20" Canvas.Left="20.401" Canvas.Top="7.952">
                <Image x:Name="image2" Width="72.533" Source="/Resources/返回.png" OpacityMask="LightPink" Height="17.175"/>
            </Button>
        </Canvas>
        <Canvas Margin="0,2.603,3.6,35.397" Grid.Row="2">
            <Canvas Height="35.455" Canvas.Left="10" Canvas.Top="10" Width="458.4">
                <Label x:Name="homeworkTitle" Content="作业标题" Height="28.055" Canvas.Left="20.8" Canvas.Top="10" Width="112.8"/>
                <TextBox x:Name="textBoxHomeworkTitle" Height="28.055" Canvas.Left="163.2" TextWrapping="Wrap" Canvas.Top="7.4" Width="220" Background="White" Text="请输入作业标题"/>
                <Button x:Name="btnRelease" Content="发布" Height="29.334" Canvas.Left="211.466" Canvas.Top="388.224" Width="92.734"/>
            </Canvas>
            <Canvas Height="135.467" Canvas.Left="10" Canvas.Top="45.455" Width="458.4">
                <Label x:Name="description" Content="作业描述" Height="28.055" Canvas.Left="21.867" Canvas.Top="20.145" Width="112.8"/>
                <TextBox x:Name="textBoxDescription" Height="100.379" Canvas.Left="165.6" TextWrapping="Wrap" Text="请输入作业描述" Canvas.Top="25.088" Width="218.4"/>
            </Canvas>
            <Canvas Height="138.132" Canvas.Left="10" Canvas.Top="185.922" Width="448.067">
                <Label x:Name="deadLine" Content="截止时间" Height="28.055" Canvas.Left="22.8" Canvas.Top="10" Width="112.8"/>
                <Calendar Height="140" Canvas.Left="167.6" Canvas.Top="10" Width="172.8" BorderThickness="1,1,1,2"/>
            </Canvas>
            <Canvas Height="53.332" Canvas.Top="342.654" Width="448.067">
                <Label x:Name="attachment" Content="上传附件（可选）" Height="28.055" Canvas.Left="32.4" Canvas.Top="12.047" Width="112.8"/>
                <Button x:Name="btnUpload" Height="20.159" Canvas.Left="174.933" Canvas.Top="14.094" Width="102.934" Background="White" BorderThickness="0">
                    <Grid Height="20.159" Width="102.934">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="29*"/>
                            <ColumnDefinition Width="73*"/>
                        </Grid.ColumnDefinitions>
                        <Image x:Name="image" Source="/Resources/链接.png" Margin="0,0,5,0"/>
                        <Label x:Name="upload" Content="点击上传" Grid.Column="1"  FontSize="9" Margin="-10.002,0,10,0"/>
                    </Grid>
                </Button>
            </Canvas>
        </Canvas>

    </Grid>
</Window>
