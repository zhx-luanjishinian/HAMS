<Window x:Class="HAMS.Teacher.TeacherView.AnswerQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HAMS.Teacher.TeacherView"
        mc:Ignorable="d"
     Title="AnswerQuestion" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="123*"/>
            <RowDefinition Height="135*"/>
        </Grid.RowDefinitions>
        <Canvas Margin="0,0,0,1.325" Grid.ColumnSpan="2" Background="LightBlue" Height="60.752" VerticalAlignment="Bottom">
            <Label x:Name="labelClassName" Content="SVM实验" Width="148.533" Height="50.111" Canvas.Left="99.867" Canvas.Top="15.439" FontSize="20" FontWeight="Bold"/>
            <Border BorderBrush="Black" BorderThickness="0" Height="37.552" Canvas.Left="10" Canvas.Top="14.759" Width="525"/>
            <Button x:Name="button1" Width="65.62" Background="LightBlue" BorderThickness="0" Height="30" Canvas.Left="20.066" Canvas.Top="15.439">
                <Image x:Name="image2" Width="65.62" Source="/Resources/返回.png" Height="28.53"/>
            </Button>
            <Image x:Name="image" Width="106.568" Source="/Resources/logo.jpg" Stretch="Fill" Height="42.078" Canvas.Left="336.874" Canvas.Top="3.361"/>
        </Canvas>
        <Canvas Grid.ColumnSpan="2" Margin="1.6,-1.325,0,0" Grid.Row="1">
            <Button x:Name="btnComment" Height="33.402" Width="39.867" Background="White" BorderThickness="0" Canvas.Left="382.6" Canvas.Top="21.309">
                <Image x:Name="image3" Height="24.866" Width="40.667" Source="/Resources/评论.png"/>
            </Button>
            <Image x:Name="stuImage" Height="38.4" Width="47.2" Source="/Resources/学生.png" Canvas.Left="40.074" Canvas.Top="31.61"/>
            <Label x:Name="stuName" Content="学生1" RenderTransformOrigin="0.512,0.533" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment" Height="41.288" Canvas.Left="92.274" Canvas.Top="31.61" Width="84" FontSize="13"/>
            <TextBox x:Name="textBoxQuestion" TextWrapping="Wrap" Text="老师好，请问实验结果的具体要求是什么？" Height="65.098" Canvas.Left="87.274" Canvas.Top="59.711" Width="394.726" FontSize="13"/>
            <Button x:Name="btnCancelComment" Height="33.401" Width="42.4" Background="White" BorderThickness="0" Canvas.Left="439.6" Canvas.Top="21.309">
                <Image x:Name="image4" Height="24.866" Width="30.533" Source="/Resources/删除.png"/>
            </Button>
        </Canvas>
        <Canvas Grid.ColumnSpan="2" Grid.Row="2">
            <Label x:Name="teacherName" Content="刘树栋老师" Height="23.8" Width="91.8" Canvas.Left="89.674" Canvas.Top="30.965"/>
            <Image x:Name="teacherImage1" Height="35" Width="44.8" Source="/Resources/男老师.png" Canvas.Left="44.874" Canvas.Top="30.965"/>
            <TextBox x:Name="textBoxAnswer" TextWrapping="Wrap" Text="将实验结果截图，提交word文档即可" Height="44.302" Canvas.Left="94.674" Canvas.Top="59.765" Width="328.926" FontSize="13"/>
        </Canvas>

    </Grid>
</Window>
