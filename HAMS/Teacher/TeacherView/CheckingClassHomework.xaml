<Window x:Class="HAMS.Teacher.TeacherView.CheckingClassHomework"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HAMS.Teacher.TeacherView"
        mc:Ignorable="d"
        Title="CheckingClassHomework" Height="472" Width="840" WindowStyle="None" WindowState="Maximized">
    <Window.Resources>
        <Style x:Key="TabItemStyle">
            <Style.Triggers>
                <Trigger Property="TabItem.IsSelected" Value="True">
                    <Setter Property="TabItem.Template" >
                        <Setter.Value>
                            <ControlTemplate>
                                <Canvas Name="canvas" Background="#FF807FFE" Width="100" Height="23">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Canvas.Top="3"
                                               Text="{TemplateBinding HeaderedContentControl.Header}"
                                               Canvas.Left="8">
                                    </TextBlock>
                                </Canvas>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="TabItem.FontFamily" Value="Microsoft YaHei UI"/>
                    <Setter Property="TabItem.FontWeight" Value="Bold"/>
                    <Setter Property="TabItem.Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="TabItem.IsMouseOver" Value="True">
                    <Setter Property="TabItem.Template" >
                        <Setter.Value>
                            <ControlTemplate>
                                <Canvas Name="canvas" Background="#FF6160E2">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                              
                                               Text="{TemplateBinding HeaderedContentControl.Header}"
                                               >
                                    </TextBlock>
                                </Canvas>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <!--<Trigger Property="TabItem.IsFocused" Value="True">
                    <Setter Property="TabItem.Background" Value="Gray"/>
                </Trigger>-->
            </Style.Triggers>
        </Style>
        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True"/>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True"/>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LabelStyle1" TargetType="{x:Type Label}">

            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
        </Style>
        <Style x:Key="ContentPresenterStyle1" TargetType="{x:Type ContentPresenter}"/>
        <Style x:Key="ButtonStyle2" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Ellipse Stroke="Black" StrokeThickness="1.5"/>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True"/>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True"/>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextBoxStyle1" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Viewbox Stretch="UniformToFill">
        <Grid Margin="0,0,0,-1" Height="472" Width="840">
            <Grid Height="50" VerticalAlignment="Top" Background="LightBlue" Margin="0,0.344,0,0">
                <Button x:Name="btnExit" Background="LightBlue" Width="49.177" RenderTransformOrigin="0.622,0.945" Foreground="#FF151111" BorderBrush="LightBlue" HorizontalAlignment="Right" Margin="0,0,2,0" Click="btnExit_Click">
                    <StackPanel>
                        <Image x:Name="exit1" Width="28" Height="23.907" Source="../../Resources/resizeApi.png" RenderTransformOrigin="0.483,0.453"/>
                        <TextBlock x:Name="exit2" VerticalAlignment="Center" RenderTransformOrigin="0.47,1.481" FontWeight="SemiBold"><Run Text="注销"/></TextBlock>
                    </StackPanel>
                </Button>
                <TextBlock x:Name="tbTeacherInfo" Width="40.21" TextAlignment="Center" HorizontalAlignment="Left" Margin="69.567,18.677,0,17.667" Text="Z001">
                    <TextBlock.Background>
                        <ImageBrush/>
                    </TextBlock.Background></TextBlock>
                <TextBlock x:Name="tbTeacherInfo1" Width="45.047" TextAlignment="Center" HorizontalAlignment="Left" Margin="114.777,18.677,0,17.667" Text="刘树栋">
                    <TextBlock.Background>
                        <ImageBrush/>
                    </TextBlock.Background></TextBlock>
                <Image x:Name="imgSystemLogo" Width="47.831" Source="/HAMS;component/logo.png" Stretch="Fill" HorizontalAlignment="Right" Margin="0,0,82.707,1.235"/>
                <Image x:Name="headImage" Source="../../Resources/男教师.png" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="41"  RenderTransformOrigin="1.894,0.568" Margin="10,7.656,0,0"/>
            </Grid>
            <Grid Margin="1,50.344,-1,0" Height="37.552" VerticalAlignment="Top" Background="LightPink">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="454*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnReturn" Margin="10,3.12,0,6.88" BorderThickness="0" BorderBrush="#FF9F9D9D" Click="btnReturn_Click" HorizontalAlignment="Left" Width="37.971">
                    <Button.Background>
                        <ImageBrush ImageSource="../../Resources/返回.png"/>
                    </Button.Background>
                </Button>
                <TextBlock x:Name="tbClassInfo" Width="113.16" TextAlignment="Center" HorizontalAlignment="Left" Margin="-39.98,9.24,0,7" Grid.Column="2">
                    <TextBlock.Background>
                        <ImageBrush/>
                    </TextBlock.Background><Run Text="Z004530B1300720   "/></TextBlock>
                <TextBlock x:Name="tbClassInfo1" Width="50.281" TextAlignment="Center" HorizontalAlignment="Right" Margin="0,9.24,606.337,7" Grid.Column="2">
                    <TextBlock.Background>
                        <ImageBrush/>
                    </TextBlock.Background><Run Text="R语言"/></TextBlock>
                <Label x:Name="label" Content="作业公告详情" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,34.706,10" VerticalAlignment="Bottom" Width="83.123" Height="22.942" Style="{DynamicResource LabelStyle1}"/>
            </Grid>
            <Grid Margin="0,80,0.4,264.84">
                <Label x:Name="lbNotTitle" Content="" Height="24" Width="130" RenderTransformOrigin="0.507,0.631" HorizontalAlignment="Left" Margin="79,10.143,0,0" VerticalAlignment="Top"/>
                <Image x:Name="homework_png" Source="../../Resources/homework.png" Stretch="Fill" Width="56" HorizontalAlignment="Left" Margin="10,37.571,0,41.027" OpacityMask="{x:Null}"/>
                <Label x:Name="labelHomeworkArrangeTime" Content="2020年11月10日 星期二 10:10" Width="156.021" FontSize="10" HorizontalAlignment="Right" Margin="0,10.143,198.177,0" VerticalAlignment="Top"/>
                <TextBlock x:Name="textBlockDescription" TextWrapping="Wrap" Text="1.调试代码，结合代码和教材理解svm的大间隔理论                                                    2.尝试用CNN去跑数据集" Margin="79,37.571,27.599,0" Height="65.133" VerticalAlignment="Top"/>
                <Button x:Name="uploadButton" Height="20.159" Background="White" BorderThickness="0" Width="101.334" HorizontalAlignment="Left" Margin="10,0,0,4.297" VerticalAlignment="Bottom" d:LayoutOverrides="HorizontalAlignment">
                    <Grid Height="20" Width="101.334">

                        <Image x:Name="image" Source="../../Resources/链接.png" HorizontalAlignment="Right" Width="20.4" Margin="0,0,75.934,0"/>
                        <Label x:Name="labelAccessoryName1" Content="查看相关附件" FontSize="9" Margin="0,0,-1.666,0" HorizontalAlignment="Right" Width="77.6"/>
                    </Grid>
                </Button>
                <Border HorizontalAlignment="Right" Margin="0,10.143,27.599,0" Width="91.867" Height="22.7" VerticalAlignment="Top">
                    <Grid>
                        <Button x:Name="button" Content="" Margin="0.8,0,0,0"/>
                        <Button x:Name="btnAnswerQuestion" Margin="23.8,0,0,0" Background="White" Content="作业答疑区" BorderBrush="{x:Null}"  Click="btnAnswerQuestion_Click"/>
                        <Image x:Name="image2" Source="../../Resources/提交作业.png" Width="23.8" HorizontalAlignment="Left" d:LayoutOverrides="HorizontalAlignment">
                        </Image>
                    </Grid>
                </Border>
            </Grid>
            <Grid Margin="1,207.16,0,0" Height="22.44" VerticalAlignment="Top" d:LayoutOverrides="VerticalAlignment">

                <TextBox x:Name="tbStuNameSearch" TextWrapping="Wrap" Margin="0,2.2,55.4,0.24" Grid.ColumnSpan="2" Text="请输入学生的完整姓名。" GotFocus="tbSearch_GotFocus"/>

                <Button x:Name="btnSearch1" Width="22" HorizontalAlignment="Right" Margin="0,0,62.4,-0.56" Height="20" VerticalAlignment="Bottom" Grid.Column="1" BorderThickness="0" Click="btnSearch_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/HAMS;component/Resources/查询.png"/>
                    </Button.Background>

                </Button>
                <Button x:Name="btnRefresh" HorizontalAlignment="Left" Margin="789.6,0,0,0.24" Width="40.4" Background="White" BorderBrush="White" Click="btnRefresh_Click">
                    <Image x:Name="image1" Height="19.2" Width="30.4" Source="/HAMS;component/Resources/刷新.png"/>
                </Button>

            </Grid>
            <Grid HorizontalAlignment="Right" Width="839.6" Margin="0,239.6,0.4,0">
                <Border Margin="0,-2.701,0,2.107" BorderThickness="0,0.5,0,0">
                    <Border.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <TabControl x:Name="tabControl" Margin="0,-0.5,0,-1.713" d:LayoutOverrides="LeftPosition, RightPosition">

                        <TabItem x:Name="TbItemChecked" Header="    已批改   5" Margin="-2,0.067,0,-0.067" HorizontalAlignment="Left" Style="{StaticResource TabItemStyle}" Width="100" Height="23" VerticalAlignment="Top">
                            <TabItem.Background>
                                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                                    <GradientStop Color="#FFCBC6F0"/>
                                    <GradientStop Color="#FFEEEEF0" Offset="0.376"/>
                                    <GradientStop Color="#FFB4A8E9" Offset="1"/>
                                </LinearGradientBrush>
                            </TabItem.Background>
                            <Grid Background="#FFE5E5E5" Margin="0,0,0,-3.066">

                                <ListView x:Name="listViewChecked" Grid.ColumnSpan="7">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn/>
                                        </GridView>
                                    </ListView.View>

                                </ListView>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="TbItemUnCheck" Header="    待批改   56" Margin="-2,0,0,-0.067" HorizontalAlignment="Left" Style="{StaticResource TabItemStyle}" Width="100" Height="22" VerticalAlignment="Bottom">
                            <TabItem.Background>
                                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                                    <GradientStop Color="#FFFAE6F9"/>
                                    <GradientStop Color="#FFEEEEF0" Offset="0.376"/>
                                    <GradientStop Color="#FFF3C5D6" Offset="1"/>
                                </LinearGradientBrush>
                            </TabItem.Background>
                            <Grid Background="#FFE5E5E5">
                                
                                <ListView x:Name="listViewUnCheck" Grid.ColumnSpan="6" Margin="0,0,-0.2,0.2">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn/>
                                        </GridView>
                                    </ListView.View>

                                </ListView>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="TbItemUnFinish" Header="    未完成   15" Margin="-4.8,0,0,-0.4" HorizontalAlignment="Left" Style="{StaticResource TabItemStyle}" Width="100" Height="22" VerticalAlignment="Bottom">
                            <TabItem.Background>
                                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                                    <GradientStop Color="#FFEDF6F5"/>
                                    <GradientStop Color="#FFEEEEF0" Offset="0.376"/>
                                    <GradientStop Color="#FFC5F3EB" Offset="1"/>
                                </LinearGradientBrush>
                            </TabItem.Background>
                            <Grid Background="#FFE5E5E5" Margin="0,0,0,-10.4">

                                <ListView x:Name="listViewUnFinish" Margin="0,0,0,10" Grid.ColumnSpan="4">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn/>
                                        </GridView>
                                    </ListView.View>

                                </ListView>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Border>
                <Button x:Name="btnHomeworkStatistic" Content="查看作业情况统计图" FontWeight="Bold" Margin="0,-3,-0.4,210" Click="btnHomeworkStatistic_Click" Background="#FFDDD3FA" BorderBrush="#FFCDC1F3" HorizontalAlignment="Right" Width="132">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="3"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
