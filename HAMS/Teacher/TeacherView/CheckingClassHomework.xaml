            <Button x:Name="btnDisappear" Content="" Width="15" Height="15" BorderThickness="0" HorizontalAlignment="Left" Margin="85,0,0,5.329" VerticalAlignment="Bottom">
                <Button.Background>
                    <ImageBrush ImageSource="../../Resources/向上.png"/>
                </Button.Background>
            </Button>
            <Label x:Name="label5" Content="收起作业内容" HorizontalAlignment="Left" Margin="22,0,0,5.329" VerticalAlignment="Bottom" FontSize="8"/>
            <Border HorizontalAlignment="Right" Height="33" Margin="0,0,9.667,8.329" VerticalAlignment="Bottom" Width="99" Grid.Column="2">
                <Grid>
                    <Button x:Name="btnAnswerQuestion" Content="" Margin="0.8,0,0,0"/>
                    <Button x:Name="button3" Margin="28.8,0,0,0" Background="White" Content="作业答疑区" BorderBrush="{x:Null}"/>
                    <Button x:Name="button2" Content="" Width="28.8" HorizontalAlignment="Left" d:LayoutOverrides="HorizontalAlignment">
                        <Button.OpacityMask>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.OpacityMask>
                        <Button.Background>
                            <ImageBrush ImageSource="../../Resources/提交作业.png"/>
                        </Button.Background>
                    </Button>
                </Grid>
            </Border>
        </Grid>
        <Grid Margin="0,218.673,0,0" Height="27.24" VerticalAlignment="Top">
            <TextBox x:Name="tbSearch" Height="27.24" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Bottom" Margin="0,0,0,-4.053"/>
