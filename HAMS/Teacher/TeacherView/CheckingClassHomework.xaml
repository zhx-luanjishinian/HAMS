                        <Grid Background="#FFE5E5E5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0*"/>
                                <ColumnDefinition Width="59*"/>
                                <ColumnDefinition Width="44*"/>
                                <ColumnDefinition Width="0*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="114*"/>
                                <ColumnDefinition Width="294*"/>
                            </Grid.ColumnDefinitions>
                            <ListView x:Name="listViewUnCheck" Grid.ColumnSpan="7" Margin="0,0,-0.333,1">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn/>
                                    </GridView>
                                </ListView.View>
                                <Canvas Height="39.8" Width="482.866">
                                    <Rectangle Height="25.811" Canvas.Left="10" Stroke="Black" Canvas.Top="6.189" Width="29.2" StrokeThickness="0">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="/HAMS;component/Resources/profile.jpg"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <Border BorderBrush="#FFABADB3" BorderThickness="0,0,0,1" Height="39.8" Width="491.399" Canvas.Left="-8.533"/>
